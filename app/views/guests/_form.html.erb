
<%= simple_form_for(@guest) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :attending, label: "Yes, I will attend. **Event details will be sent by text**" %>
    <div class="d-flex justify-content-between">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    </div>
    <%= f.input :phone_number %>
    <%= f.input :address, label: "Address (to receive a newborn photo ❤️)" %>
    <div class="d-flex justify-content-between">
    <%= f.input :city_state, label: "City, State" %>
    <%= f.input :zipcode %>
    </div>
    <p>Check boxes below to receive text messages about the following:</p>
    <%= f.input :reminders, label: "A Baby Shower Reminder" %>
    <%= f.input :birth_alert, label: "Message me when the baby is born!" %>
    <%= f.input :see_photos, label: "Let me know when you post newborn photos" %>
  </div>

  <div class="form-actions d-flex justify-content-around">
    <%= f.button :submit, "Submit", class: "btn btn-outline-dark" %>
    <%= link_to "Home", root_path, class: "btn btn-outline-dark", style:"font-weight: bold;" %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Guests</h1>

<table>
  <thead>
    <tr>
      <th>Attending</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>City state</th>
      <th>Zipcode</th>
      <th>Reminders</th>
      <th>Birth alert</th>
      <th>See photos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.attending %></td>
        <td><%= guest.first_name %></td>
        <td><%= guest.last_name %></td>
        <td><%= guest.phone_number %></td>
        <td><%= guest.address %></td>
        <td><%= guest.city_state %></td>
        <td><%= guest.zipcode %></td>
        <td><%= guest.reminders %></td>
        <td><%= guest.birth_alert %></td>
        <td><%= guest.see_photos %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

